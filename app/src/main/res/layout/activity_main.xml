<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_activity_start_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Activity启动方式"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Fragment"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_handler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Android 消息机制"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Service"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动画"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_rxjava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试RxJava"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_perfor_opt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性能优化"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_data_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据存储"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_custom_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义View"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_socket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="socket"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_structure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="架构"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试适配方案"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="布局"
                android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/play_progresss"
                style="@style/Widget.SeekBar.Normal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:max="100"
                android:padding="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:progress="0"
                android:splitTrack="false" />

            <RelativeLayout
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/ll_expand_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/rl_upload_cloud"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp">

                    <EditText
                        android:id="@+id/ed_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ellipsize="end"
                        android:maxLength="16"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="2020年5月6号 111111121111111111:09"
                        android:textColor="#262626"
                        android:textColorHint="#8c8c8c"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/icon_edit_title"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_alignBottom="@+id/ed_title"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/ed_title"
                        android:src="@mipmap/icon_edit_title" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_upload_cloud"
                    android:layout_width="65dp"
                    android:layout_height="26dp"
                    android:layout_alignTop="@+id/rl_title"
                    android:layout_alignBottom="@+id/rl_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_audio_title_upload"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/img_upload_cloud"
                        android:layout_width="18dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_uploading" />

                    <TextView
                        android:id="@+id/tv_upload_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/img_upload_cloud"
                        android:textColor="#4285F6"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>