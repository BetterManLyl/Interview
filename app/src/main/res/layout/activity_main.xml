<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_activity_start_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Activity启动方式"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Fragment"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_handler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Android 消息机制"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Service"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动画"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_rxjava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试RxJava"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_perfor_opt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性能优化"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_data_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据存储"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_custom_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义View"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_socket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="socket"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_structure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="架构"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试适配方案"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="布局"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_webview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试webview"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>